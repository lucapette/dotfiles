[user]
	name = lucapette
	email = lucapette@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = nvim
    excludesfile = ~/.gitignore
[alias]
    amend = commit --amend
    br = branch
    ck = checkout
    ca = !git add -A . && git commit
    co = commit
    ct = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
    df = diff
    h  = help
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files
    pop = stash pop
    rb = rebase -i @{u}
    st = stash -u
    sw = show
    un = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git lg origin/$GIT_CURRENT_BRANCH..$GIT_CURRENT_BRANCH
    v = !nvim -O `git status --porcelain | awk '/^[^D]/ {print $NF}'`
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    old = red
    new = green
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[init]
	templatedir = ~/.git_template
[credential]
	helper = cache --timeout=3600
[merge]
    tool = nvimdiff
[push]
	default = simple
