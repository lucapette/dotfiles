[user]
	name = lucapette
	email = lucapette@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = vim
    excludesfile = ~/.gitignore
[alias]
    amend = commit --amend
    ca = !git add -A && git commit
    ck = checkout
    clean-branches = "!git branch --merged | grep -v '^*' | xargs git branch -d"
    co = commit
    ct = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
    dc = diff --cached
    df = diff
    dw = diff --word-diff=color
    h  = help
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pl = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git pull origin $GIT_CURRENT_BRANCH
    ps = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git push origin $GIT_CURRENT_BRANCH
    rb = !git rebase -i HEAD~$(git un | awk 'END { print NR }')
    st = status -s
    sw = show
    un = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git lg origin/$GIT_CURRENT_BRANCH..$GIT_CURRENT_BRANCH
    vi = !vim -O `git st --porcelain | grep -v '^D' | ff 2`
    wc = whatchanged --oneline
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = black bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[init]
	templatedir = ~/.git_template
[web]
	browser = google-chrome
[credential]
	helper = cache --timeout=3600
[merge]
    tool = vimdiff
