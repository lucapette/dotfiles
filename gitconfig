[user]
	name = lucapette
	email = ciao@lucapette.me
[apply]
    whitespace = nowarn
[core]
    editor = vim
    excludesfile = ~/.gitignore
[alias]
    amend = commit --amend
    br = branch
    ck = checkout
    ca = !git add -A . && git commit -v
    co = commit
    df = diff
    h  = help
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files
    pop = stash pop
    rb = rebase -i @{u}
    st = stash -u
    sw = show
    vi = !vim -O `git status --porcelain | awk '/^[^D]/ {print $NF}'`
    wip = !git add -A . && git commit -m 'WIP' && git push origin
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    old = red
    new = green
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
	helper = cache --timeout=3600
[merge]
    tool = vimdiff
[push]
	default = simple
