[user]
	name = lucapette
	email = lucapette@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = vim
    excludesfile = ~/.gitignore
[alias]
    amend = commit --amend
    br = branch
    ck = checkout
    ca = !git add -A . && git commit
    co = commit
    ct = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
    df = diff
    h  = help
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files
    rb = rebase -i @{u}
    sw = show
    un = !git lg @{u}..HEAD
    vi = !vim -O `git status --porcelain | grep -v '^D' | ff 2`
    wc = whatchanged --oneline
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    old = red
    new = green
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[init]
	templatedir = ~/.git_template
[credential]
	helper = cache --timeout=3600
[merge]
    tool = vimdiff
