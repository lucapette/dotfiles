[user]
	name = lucapette
	email = lucapette@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = gvim --nofork
    excludesfile = ~/.gitignore
[alias]
    ck = checkout
    co = commit
    ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
    df = diff
    gl = log --reverse --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files
    pl = pull origin master
    ps = push origin master
    st = status -s
    sw = show
    unpushed = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git lg origin/$GIT_CURRENT_BRANCH..$GIT_CURRENT_BRANCH
    vi = !gvim -O `git st --porcelain | ruby -n -e'puts $_[3..-1]'`
    wc = whatchanged --oneline
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = black bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[init]
	templatedir = ~/.git_template
